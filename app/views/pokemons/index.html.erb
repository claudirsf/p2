<p id="notice"><%= notice %></p>

<h1>Pokemons</h1>
<div class="row">
<% @pokemons.each do | pokemon | %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
<div class="card bg-dark text-white border-primary mb-3" style="">
  
  <img class="card-img-top" 
    style="height: 10vw; width: 100%; object-fit: contain;"
    src="<%= pokemon.sprite %>" alt="Card image cap">
  <div class="card-img-overlay">
  
  
  
  </div>
  <div class="card-body">

    <h5 class="card-title">
      <%= pokemon.species %>
    </h5>
    <%= link_to 'Show', pokemon, class:"btn btn-primary btn-sm" %></td>
    <%= link_to 'Edit', edit_pokemon_path(pokemon), class:"btn btn-primary btn-sm" %></td>
    <%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary btn-sm" %></td>
 
  </div>
</div>
</div>
<% end %>
</div>

<%= link_to 'New Pokemon', new_pokemon_path %>
